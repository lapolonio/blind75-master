generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  password      String?
  subscription  String    @default("free") // free, premium
  stripeCustomerId String?
  stripeSubscriptionId String?
  accounts      Account[]
  sessions      Session[]
  progress      Progress[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Problem {
  id            String    @id @default(cuid())
  slug          String    @unique
  title         String
  difficulty    String    // easy, medium, hard
  category      String    // array, string, tree, etc.
  pattern       String    // two-pointers, sliding-window, etc.
  description   String    @db.Text
  constraints   String    @db.Text
  examples      Json      // array of {input, output, explanation}
  starterCode   Json      // {javascript: "", python: "", typescript: ""}
  solution      Json      // {approach: "", complexity: {time: "", space: ""}, code: {}}
  testCases     Json      // array of {input, expected}
  hints         Json?     // array of strings
  isPremium     Boolean   @default(false)
  order         Int
  progress      Progress[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Progress {
  id          String    @id @default(cuid())
  userId      String
  problemId   String
  status      String    @default("not-started") // not-started, attempted, solved
  lastCode    String?   @db.Text
  language    String    @default("javascript")
  attempts    Int       @default(0)
  solvedAt    DateTime?
  notes       String?   @db.Text
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  problem     Problem   @relation(fields: [problemId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([userId, problemId])
}
